{# /templates/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
         <link rel="stylesheet" href="http://localhost/livityshop/public/css/products.css">
    {% endblock %}
</head>
<body>

<article>

  {% block body %}
    {% if products is not empty %}
        {% for product in products %}
            <div class="container">
                <img src="http://localhost/livityshop/productimages/{{ product.image }}" 
                <a href="{{ path('product_detail', {'productId': product.id}) }}"
                alt="{{ product.name }}" class="img-fruit" />
                <h3>{{ product.name }}</h3>
                <p>{{ product.description }}</p>
                <div class="properties">
                    <div class="price">
                        <h4>Price</h4>
                        <span class="amount">{{ product.price }} EUR</span>
                    </div>
                </div>
                <input class="ip-add-cart" type="button" value="Add to cart" />
            </div>
        {% endfor %}
    {% else %}
        <p>No products available.</p>
    {% endif %}
{% endblock %}


    
    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
        <script src="http://localhost/livityshop/public/css/products.js"></script>
    {% endblock %}
</article>
    <footer class="py-3 my-4">
        
        <p class="text-center text-muted">Â© 2023 LIVITYSHOP Company, Inc Polytech Lyon</p>
    </footer>
</body>
</html>
